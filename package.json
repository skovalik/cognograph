{
  "name": "cognograph",
  "version": "0.1.1",
  "description": "Spatial canvas for AI workflow orchestration",
  "type": "module",
  "main": "./out/main/index.js",
  "author": "Stefan Kovalik",
  "license": "AGPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/skovalik/cognograph.git"
  },
  "homepage": "https://github.com/skovalik/cognograph#readme",
  "bugs": {
    "url": "https://github.com/skovalik/cognograph/issues"
  },
  "keywords": [
    "ai",
    "canvas",
    "spatial",
    "knowledge-graph",
    "context-injection",
    "llm",
    "electron",
    "workspace",
    "orchestration",
    "mcp-server"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "cognograph-mcp": "./dist/cognograph-mcp.cjs"
  },
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "build:mcp": "esbuild src/main/mcp/cli.ts --bundle --platform=node --target=node18 --outfile=dist/cognograph-mcp.cjs --external:fsevents",
    "preview": "electron-vite preview",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "mcp": "electron . --mcp-server",
    "mcp:standalone": "electron . --mcp-standalone",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "npm run build && playwright test",
    "test:e2e:headed": "npm run build && playwright test --headed",
    "validate:arch": "depcruise src --config .dependency-cruiser.cjs",
    "validate:deps": "knip",
    "validate": "npm run typecheck && npm run validate:arch && npm run validate:deps",
    "postinstall": "electron-rebuild",
    "prepare": "husky",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "build:all": "npm run build && electron-builder --win --mac --linux",
    "build:dir": "npm run build && electron-builder --dir"
  },
